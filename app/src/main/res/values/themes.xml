<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material Design 3 -->
    <style name="Theme.Eco_plate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryContainer">@color/primary_green_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/primary_green_dark</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_orange</item>
        <item name="colorSecondaryContainer">@color/secondary_yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error</item>
        <item name="colorOnErrorContainer">@color/white</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Typography -->
        <!-- <item name="fontFamily">@font/product_sans</item> -->
        
        <!-- Elevations and shapes -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.EcoPlate.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.EcoPlate.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.EcoPlate.LargeComponent</item>
        
        <!-- Window animations -->
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowContentTransitions">true</item>
        
        <!-- Edge to edge -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.EcoPlate.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.EcoPlate.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.EcoPlate.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
    
    <!-- Text Appearances -->
    <style name="TextAppearance.EcoPlate.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.EcoPlate.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.EcoPlate.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.EcoPlate.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.EcoPlate.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
    </style>
    
    <style name="Widget.EcoPlate.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/primary_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="Widget.EcoPlate.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_green</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.EcoPlate.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.EcoPlate.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="itemRippleColor">@color/primary_green_alpha_20</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>
    
    <!-- Chip Style -->
    <style name="Widget.EcoPlate.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="chipStrokeColor">@color/gray_300</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="checkedIconTint">@color/primary_green</item>
        <item name="chipIconTint">@color/text_secondary</item>
    </style>
    
    <!-- Dialog Style -->
    <style name="ThemeOverlay.EcoPlate.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorSecondary">@color/secondary_orange</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.EcoPlate</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.EcoPlate.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.EcoPlate.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.EcoPlate.Button.TextButton</item>
    </style>
    
    <style name="MaterialAlertDialog.EcoPlate" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.EcoPlate.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>
    
    <style name="MaterialAlertDialog.EcoPlate.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Bottom Sheet Style -->
    <style name="ThemeOverlay.EcoPlate.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.EcoPlate.BottomSheet</item>
    </style>
    
    <style name="Widget.EcoPlate.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.EcoPlate.BottomSheet</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:elevation">16dp</item>
    </style>
    
    <style name="ShapeAppearance.EcoPlate.BottomSheet" parent="">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Widget.EcoPlate.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.EcoPlate.FAB</item>
    </style>
    
    <style name="ShapeAppearance.EcoPlate.FAB" parent="">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    
    <!-- Search Bar Style -->
    <style name="Widget.EcoPlate.SearchBar" parent="">
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>