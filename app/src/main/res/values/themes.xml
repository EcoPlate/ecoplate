<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eco_plate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (cream) -->
        <item name="colorPrimary">@color/cream_primary</item>
        <item name="colorPrimaryVariant">@color/cream_variant</item>
        <item name="colorOnPrimary">@color/soft_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cream_variant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- NoActionBar variant for WelcomeActivity -->
    <style name="Theme.Eco_plate.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cream_primary</item>
        <item name="colorPrimaryVariant">@color/cream_variant</item>
        <item name="colorOnPrimary">@color/soft_brown</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/cream_variant</item>
    </style>
</resources>

